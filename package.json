{
  "name": "erp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run emulators & npm run start-next",
    "emulators": "firebase emulators:start --only functions,firestore,auth",
    "import-data": "ts-node -O '{\"module\":\"commonjs\"}' scripts/import-test-data.ts",
    "start-next": "wait-on tcp:4000 & wait-on tcp:9099 & npm run import-data && NODE_ENV=development next dev",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production next start",
    "lint": "next lint"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "firebase": "^10.5.2",
    "firebase-admin": "^11.11.0",
    "next": "13.5.6",
    "nookies": "^2.5.2",
    "react": "^18",
    "react-dom": "^18",
    "storybook": "^7.5.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.52.0",
    "eslint-config-next": "13.5.6",
    "eslint-config-prettier": "^9.0.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "typescript": "^5",
    "wait-on": "^7.1.0"
  }
}
